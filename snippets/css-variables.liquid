{% style %}
  {% # Loads all font variantions with display: swap %}
  {{ settings.type_primary_font | font_face: font_display: 'swap' }}
  {{ settings.type_primary_font | font_modify: 'weight', 'bold' | font_face: font_display: 'swap' }}
  {{ settings.type_primary_font | font_modify: 'weight', 'bold' | font_modify: 'style', 'italic' | font_face: font_display: 'swap' }}
  {{ settings.type_primary_font | font_modify: 'style', 'italic' | font_face: font_display: 'swap' }}

  :root {
    /* Typography */
    --font-primary--family: {{ settings.type_primary_font.family }}, {{ settings.type_primary_font.fallback_families }};
    --font-primary--style: {{ settings.type_primary_font.style }};
    --font-primary--weight: {{ settings.type_primary_font.weight }};
    
    /* Layout */
    --page-width: {{ settings.max_page_width }};
    --page-margin: {{ settings.min_page_margin }}px;
    
    /* Colors */
    --color-background: {{ settings.background_color }};
    --color-foreground: {{ settings.foreground_color }};
    --color-accent: {{ settings.accent_color | default: '#007bff' }};
    
    /* Color Schemes */
    --scheme-1-bg: {{ settings.scheme1_background | default: '#FFFFFF' }};
    --scheme-1-text: {{ settings.scheme1_text | default: '#333333' }};
    --scheme-1-accent: {{ settings.scheme1_accent | default: '#007bff' }};
    
    --scheme-2-bg: {{ settings.scheme2_background | default: '#F8F9FA' }};
    --scheme-2-text: {{ settings.scheme2_text | default: '#212529' }};
    --scheme-2-accent: {{ settings.scheme2_accent | default: '#28A745' }};
    
    --scheme-3-bg: {{ settings.scheme3_background | default: '#343A40' }};
    --scheme-3-text: {{ settings.scheme3_text | default: '#FFFFFF' }};
    --scheme-3-accent: {{ settings.scheme3_accent | default: '#FFC107' }};
    
    /* Computed color variations */
    --color-foreground-rgb: {{ settings.foreground_color | color_extract: 'red' }}, {{ settings.foreground_color | color_extract: 'green' }}, {{ settings.foreground_color | color_extract: 'blue' }};
    --color-background-rgb: {{ settings.background_color | color_extract: 'red' }}, {{ settings.background_color | color_extract: 'green' }}, {{ settings.background_color | color_extract: 'blue' }};
    
    /* Styles */
    --style-border-radius-inputs: {{ settings.input_corner_radius }}px;
    
    /* Common spacing scale */
    --spacing-xs: 0.25rem;
    --spacing-sm: 0.5rem;
    --spacing-md: 1rem;
    --spacing-lg: 1.5rem;
    --spacing-xl: 2rem;
    --spacing-2xl: 3rem;
    
    /* Common responsive breakpoints */
    --breakpoint-sm: 480px;
    --breakpoint-md: 768px;
    --breakpoint-lg: 1024px;
    --breakpoint-xl: 1200px;
    
    /* Animation durations */
    --duration-fast: 0.15s;
    --duration-normal: 0.3s;
    --duration-slow: 0.5s;
    
    /* Z-index scale */
    --z-dropdown: 1000;
    --z-modal: 1050;
    --z-tooltip: 1100;
  }

  /* Performance optimizations */
  @media (prefers-reduced-motion: reduce) {
    *,
    *::before,
    *::after {
      animation-duration: 0.01ms !important;
      animation-iteration-count: 1 !important;
      transition-duration: 0.01ms !important;
    }
  }

  /* Dark mode support (if needed in future) */
  @media (prefers-color-scheme: dark) {
    :root {
      --color-scheme: dark;
    }
  }

  /* Color Scheme Classes */
  .color-scheme-1 {
    background-color: var(--scheme-1-bg);
    color: var(--scheme-1-text);
  }
  
  .color-scheme-1 .accent {
    color: var(--scheme-1-accent);
  }
  
  .color-scheme-2 {
    background-color: var(--scheme-2-bg);
    color: var(--scheme-2-text);
  }
  
  .color-scheme-2 .accent {
    color: var(--scheme-2-accent);
  }
  
  .color-scheme-3 {
    background-color: var(--scheme-3-bg);
    color: var(--scheme-3-text);
  }
  
  .color-scheme-3 .accent {
    color: var(--scheme-3-accent);
  }

  /* Scheme classes for sections */
  .scheme-1 {
    background-color: var(--scheme-1-bg);
    color: var(--scheme-1-text);
  }
  
  .scheme-2 {
    background-color: var(--scheme-2-bg);
    color: var(--scheme-2-text);
  }
  
  .scheme-3 {
    background-color: var(--scheme-3-bg);
    color: var(--scheme-3-text);
  }
{% endstyle %}
