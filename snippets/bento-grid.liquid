{% doc %}
  Renders a bento-style grid layout for mixed content types.

  @param {object} items - Collection of items to display in the grid
  @param {string} [grid_class] - Optional CSS class for the grid container

  @example
  {% render 'bento-grid', items: collections.products %}
  {% render 'bento-grid', items: blog.articles, grid_class: 'custom-bento' %}
{% enddoc %}

{%- liquid
  assign grid_class = grid_class | default: 'bento-grid'
  assign item_count = items.size
-%}

{%- if item_count > 0 -%}
  <div class="{{ grid_class }}" data-item-count="{{ item_count }}">
    {%- for item in items limit: 12 -%}
      {%- liquid
        assign item_index = forloop.index0
        assign span_class = ''
        
        # Create varied grid spans for bento layout
        case item_index
          when 0, 5, 10
            assign span_class = 'bento-item--large'
          when 2, 7
            assign span_class = 'bento-item--wide'
          when 3, 8
            assign span_class = 'bento-item--tall'
          else
            assign span_class = 'bento-item--standard'
        endcase
      -%}
      
      <div class="bento-item {{ span_class }}" data-index="{{ item_index }}">
        {%- if item.featured_image -%}
          <div class="bento-item__image">
            {% render 'image', image: item.featured_image, width: 600, height: 400, crop: 'center' %}
          </div>
        {%- endif -%}
        
        <div class="bento-item__content">
          <h3 class="bento-item__title">
            {%- if item.url -%}
              <a href="{{ item.url }}">{{ item.title | escape }}</a>
            {%- else -%}
              {{ item.title | escape }}
            {%- endif -%}
          </h3>
          
          {%- if item.description or item.excerpt -%}
            <p class="bento-item__description">
              {{ item.description | default: item.excerpt | strip_html | truncatewords: 15 }}
            </p>
          {%- endif -%}
          
          {%- if item.price -%}
            <div class="bento-item__price">
              {% render 'price', product_resource: item %}
            </div>
          {%- endif -%}
        </div>
      </div>
    {%- endfor -%}
  </div>
{%- else -%}
  <div class="bento-grid__placeholder">
    <div class="placeholder-content">
      <svg width="48" height="48" viewBox="0 0 48 48" fill="none">
        <rect x="6" y="6" width="36" height="36" rx="4" stroke="currentColor" stroke-width="2"/>
        <path d="M16 20H32M16 24H32M16 28H24" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
      </svg>
      <p>No items to display</p>
    </div>
  </div>
{%- endif -%}

{% stylesheet %}
  .bento-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1rem;
    grid-auto-rows: minmax(200px, auto);
  }

  .bento-item {
    position: relative;
    background: rgba(var(--color-foreground), 0.02);
    border-radius: 8px;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    transition: transform 0.2s ease;
  }

  .bento-item:hover {
    transform: translateY(-2px);
  }

  .bento-item--large {
    grid-column: span 2;
    grid-row: span 2;
  }

  .bento-item--wide {
    grid-column: span 2;
  }

  .bento-item--tall {
    grid-row: span 2;
  }

  .bento-item__image {
    flex: 1;
    min-height: 150px;
  }

  .bento-item__image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .bento-item__content {
    padding: 1rem;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .bento-item__title {
    font-size: 1.125rem;
    font-weight: 600;
    margin: 0;
  }

  .bento-item__title a {
    color: inherit;
    text-decoration: none;
  }

  .bento-item__title a:hover {
    opacity: 0.8;
  }

  .bento-item__description {
    font-size: 0.875rem;
    opacity: 0.8;
    margin: 0;
  }

  .bento-item__price {
    margin-top: auto;
  }

  .bento-grid__placeholder {
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 200px;
    background: rgba(var(--color-foreground), 0.02);
    border-radius: 8px;
  }

  .placeholder-content {
    text-align: center;
    color: rgba(var(--color-foreground), 0.6);
  }

  .placeholder-content svg {
    margin-bottom: 1rem;
    opacity: 0.5;
  }

  .placeholder-content p {
    margin: 0;
    font-size: 0.875rem;
  }

  @media (max-width: 768px) {
    .bento-grid {
      grid-template-columns: 1fr;
    }
    
    .bento-item--large,
    .bento-item--wide,
    .bento-item--tall {
      grid-column: span 1;
      grid-row: span 1;
    }
  }
{% endstylesheet %}