{% liquid
  assign selected_collection = collections[section.settings.collection]
  assign products_limit = section.settings.products_limit | default: 8
  assign layout_type = section.settings.layout_type | default: 'grid'
%}

<div class="section-background color-{{ section.settings.color_scheme }}"></div>

<div
  class="
    section
    section--{{ section.settings.section_width }}
    color-{{ section.settings.color_scheme }}
    custom-showcase-section
    spacing-style
    gap-style
  "
  style="
    {% render 'spacing-style', settings: section.settings %}
    {% render 'gap-style', value: section.settings.gap %}
  "
>
  <div class="custom-showcase__content">
    {%- content_for 'blocks' -%}
  </div>

  {% if selected_collection != blank and selected_collection.products.size > 0 %}
    {% capture product_items %}
      {% for product in selected_collection.products limit: products_limit %}
        <div class="showcase-product-item">
          {% render 'card-product-dynamic',
            product_card_product: product,
            show_vendor: section.settings.show_vendor,
            show_rating: section.settings.show_rating,
            show_quick_add: section.settings.show_quick_add
          %}
        </div>
        {% unless forloop.last %}
          <!--@list/split-->
        {% endunless %}
      {% endfor %}
    {% endcapture %}

    {% liquid
      assign product_items_array = product_items | strip | split: '<!--@list/split-->'
    %}

    {% render 'resource-list',
      list_items: product_items,
      list_items_array: product_items_array,
      settings: section.settings,
      carousel_ref: 'customShowcase',
      slide_count: products_limit,
      content_type: 'products',
      test_id: 'custom-showcase-grid'
    %}
  {% else %}
    <div class="custom-showcase__placeholder">
      <div class="placeholder-content">
        {% if selected_collection == blank %}
          <svg width="64" height="64" viewBox="0 0 64 64" fill="none">
            <rect x="8" y="8" width="48" height="48" rx="4" stroke="currentColor" stroke-width="2"/>
            <path d="M20 24H44M20 32H44M20 40H36" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
          </svg>
          <h3>No collection selected</h3>
          <p>Choose a collection in the section settings to showcase your products.</p>
        {% else %}
          <svg width="64" height="64" viewBox="0 0 64 64" fill="none">
            <circle cx="32" cy="20" r="8" stroke="currentColor" stroke-width="2"/>
            <path d="M16 48C16 40 23 34 32 34S48 40 48 48" stroke="currentColor" stroke-width="2"/>
          </svg>
          <h3>Collection is empty</h3>
          <p>The "{{ selected_collection.title }}" collection doesn't have any products yet.</p>
        {% endif %}
      </div>
    </div>
  {% endif %}
</div>

{% if section.settings.enable_enhanced_features %}
  {% style %}
    /* Enhanced Custom Showcase Styles */
    .shopify-section-{{ section.id }} {
      {% comment %} Layout Variables {% endcomment %}
      --showcase-section-height: {{ section.settings.section_height | default: 600 }}px;
      --showcase-product-spacing: {{ section.settings.product_spacing | default: 16 }}px;
      
      {% comment %} Typography Variables {% endcomment %}
      {% if section.settings.title_font_family == 'heading' %}
        --showcase-title-font: var(--font-heading-family);
      {% elsif section.settings.title_font_family == 'body' %}
        --showcase-title-font: var(--font-body-family);
      {% elsif section.settings.title_font_family == 'custom' and section.settings.custom_font_family != blank %}
        --showcase-title-font: {{ section.settings.custom_font_family }};
      {% else %}
        --showcase-title-font: var(--font-heading-family);
      {% endif %}
      
      --showcase-title-size: {{ section.settings.title_font_size | default: 36 }}px;
      --showcase-title-weight: {{ section.settings.title_font_weight | default: 700 }};
      --showcase-price-size: {{ section.settings.price_font_size | default: 18 }}px;
      --showcase-price-weight: {{ section.settings.price_font_weight | default: 600 }};
      --showcase-product-title-size: {{ section.settings.product_title_font_size | default: 16 }}px;
      --showcase-product-title-weight: {{ section.settings.product_title_font_weight | default: 500 }};
      
      {% comment %} Card Styling Variables {% endcomment %}
      --card-bg: {{ section.settings.card_background | default: '#ffffff' }};
      --card-border-radius: {{ section.settings.card_border_radius | default: 8 }}px;
      --card-border-width: {{ section.settings.card_border_width | default: 1 }}px;
      --card-border-color: {{ section.settings.card_border_color | default: '#e0e0e0' }};
      --card-hover-bg: {{ section.settings.card_hover_background | default: '#f9f9f9' }};
      --card-shadow: {{ section.settings.card_shadow_blur | default: 4 }}px;
    }

    /* Hide Heading Option */
    {% if section.settings.hide_heading %}
      .shopify-section-{{ section.id }} .custom-showcase__content h1,
      .shopify-section-{{ section.id }} .custom-showcase__content h2,
      .shopify-section-{{ section.id }} .custom-showcase__content h3,
      .shopify-section-{{ section.id }} .custom-showcase__content [class*="h"] {
        display: none !important;
      }
    {% endif %}

    /* Content Alignment */
    {% if section.settings.content_alignment == 'center' %}
      .shopify-section-{{ section.id }} .custom-showcase__content {
        text-align: center;
      }
      .shopify-section-{{ section.id }} .resource-list {
        justify-content: center;
      }
      .shopify-section-{{ section.id }} .resource-list__grid {
        justify-items: center;
      }
    {% elsif section.settings.content_alignment == 'right' %}
      .shopify-section-{{ section.id }} .custom-showcase__content {
        text-align: right;
      }
      .shopify-section-{{ section.id }} .resource-list {
        justify-content: flex-end;
      }
      .shopify-section-{{ section.id }} .resource-list__grid {
        justify-items: end;
      }
    {% endif %}

    /* Typography Enhancements */
    .shopify-section-{{ section.id }} h1,
    .shopify-section-{{ section.id }} h2,
    .shopify-section-{{ section.id }} h3,
    .shopify-section-{{ section.id }} .custom-showcase__content [class*="h"] {
      font-family: var(--showcase-title-font) !important;
      font-size: var(--showcase-title-size) !important;
      font-weight: var(--showcase-title-weight) !important;
    }

    /* Product Card Styling */
    .shopify-section-{{ section.id }} .product-card {
      background-color: var(--card-bg) !important;
      border-radius: var(--card-border-radius) !important;
      border: var(--card-border-width) solid var(--card-border-color) !important;
      transition: all 0.3s ease !important;
      box-shadow: 0 2px var(--card-shadow) rgba(0, 0, 0, 0.1) !important;
    }

    .shopify-section-{{ section.id }} .product-card:hover {
      background-color: var(--card-hover-bg) !important;
      transform: translateY(-4px) !important;
      box-shadow: 0 8px calc(var(--card-shadow) * 2) rgba(0, 0, 0, 0.15) !important;
    }

    /* Product Title Styling */
    .shopify-section-{{ section.id }} .product-card__title {
      font-size: var(--showcase-product-title-size) !important;
      font-weight: var(--showcase-product-title-weight) !important;
    }

    /* Price Styling */
    .shopify-section-{{ section.id }} .price {
      font-size: var(--showcase-price-size) !important;
      font-weight: var(--showcase-price-weight) !important;
    }

    /* Visibility Controls */
    {% unless section.settings.show_product_images %}
      .shopify-section-{{ section.id }} .product-card__image {
        display: none !important;
      }
    {% endunless %}

    {% unless section.settings.show_product_titles %}
      .shopify-section-{{ section.id }} .product-card__title {
        display: none !important;
      }
    {% endunless %}

    {% unless section.settings.show_product_prices %}
      .shopify-section-{{ section.id }} .price {
        display: none !important;
      }
    {% endunless %}

    /* Section Height Control */
    .shopify-section-{{ section.id }} .resource-list__grid {
      min-height: var(--showcase-section-height);
    }

    /* Product Spacing */
    .shopify-section-{{ section.id }} .showcase-product-item {
      padding: calc(var(--showcase-product-spacing) / 2);
    }

    /* Image Hover Effects */
    {% case section.settings.image_hover_effect %}
      {% when 'darken' %}
        .shopify-section-{{ section.id }} .product-card__image {
          transition: filter 0.3s ease !important;
        }
        .shopify-section-{{ section.id }} .product-card:hover .product-card__image {
          filter: brightness({{ 1 | minus: section.settings.hover_effect_intensity }}) !important;
        }
      
      {% when 'lighten' %}
        .shopify-section-{{ section.id }} .product-card__image {
          transition: filter 0.3s ease !important;
        }
        .shopify-section-{{ section.id }} .product-card:hover .product-card__image {
          filter: brightness({{ 1 | plus: section.settings.hover_effect_intensity }}) !important;
        }
      
      {% when 'lift_card' %}
        .shopify-section-{{ section.id }} .product-card {
          transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275) !important;
        }
        .shopify-section-{{ section.id }} .product-card:hover {
          transform: translateY(-{{ section.settings.hover_effect_intensity | times: 20 }}px) !important;
          box-shadow: 0 {{ section.settings.hover_effect_intensity | times: 30 }}px {{ section.settings.hover_effect_intensity | times: 60 }}px rgba(0, 0, 0, {{ section.settings.hover_effect_intensity | times: 0.3 }}) !important;
        }
      
      {% when 'zoom' %}
        .shopify-section-{{ section.id }} .product-card {
          overflow: hidden !important;
        }
        .shopify-section-{{ section.id }} .product-card__image {
          transition: transform 0.3s ease !important;
        }
        .shopify-section-{{ section.id }} .product-card:hover .product-card__image {
          transform: scale({{ 1 | plus: section.settings.hover_effect_intensity }}) !important;
        }
      
      {% when 'blur' %}
        .shopify-section-{{ section.id }} .product-card__image {
          transition: filter 0.3s ease !important;
        }
        .shopify-section-{{ section.id }} .product-card:hover .product-card__image {
          filter: blur({{ section.settings.hover_effect_intensity | times: 5 }}px) !important;
        }
    {% endcase %}

    /* Custom CSS Field */
    {{ section.settings.custom_showcase_css }}

    /* Responsive adjustments */
    @media screen and (max-width: 768px) {
      .shopify-section-{{ section.id }} {
        --showcase-title-size: calc(var(--showcase-title-size) * 0.8);
        --showcase-price-size: calc(var(--showcase-price-size) * 0.9);
        --showcase-product-title-size: calc(var(--showcase-product-title-size) * 0.9);
        --showcase-section-height: calc(var(--showcase-section-height) * 0.75);
      }
    }

    @media screen and (max-width: 480px) {
      .shopify-section-{{ section.id }} {
        --showcase-title-size: calc(var(--showcase-title-size) * 0.7);
        --showcase-section-height: calc(var(--showcase-section-height) * 0.6);
      }
    }
  {% endstyle %}
{% endif %}

