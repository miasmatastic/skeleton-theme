{% comment %}
  Custom Hero Section
  Enhanced hero section with advanced customization options
  
  Features:
  - Responsive background images (desktop/mobile)
  - Overlay system with color, gradient, and blend mode support
  - Enhanced typography system with Adobe Fonts integration
  - Drop shadow effects for all text elements
  - Flexible alignment options
  - Custom button styling
  - Creative blend modes for overlay effects
  - Overlaid highlight image with positioning and effects
{% endcomment %}

{% style %}
  {% if section.settings.title_font_source == 'shopify-picker' and section.settings.title_font_family %}
    {{ section.settings.title_font_family | font_face: font_display: 'swap' }}
  {% endif %}
  {% if section.settings.subtitle_font_source == 'shopify-picker' and section.settings.subtitle_font_family %}
    {{ section.settings.subtitle_font_family | font_face: font_display: 'swap' }}
  {% endif %}
  {% if section.settings.paragraph_font_source == 'shopify-picker' and section.settings.paragraph_font_family %}
    {{ section.settings.paragraph_font_family | font_face: font_display: 'swap' }}
  {% endif %}
  {% if section.settings.button_font_source == 'shopify-picker' and section.settings.button_font_family %}
    {{ section.settings.button_font_family | font_face: font_display: 'swap' }}
  {% endif %}

  .custom-hero-section {
    min-height: {{ section.settings.min_height }};
    display: flex;
    width: 100%;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    color: {{ section.settings.text_color }};
    position: relative;
    flex-direction: column;
    {% if section.settings.vertical_alignment == 'top' %}
      justify-content: flex-start;
    {% elsif section.settings.vertical_alignment == 'center' %}
      justify-content: center;
    {% elsif section.settings.vertical_alignment == 'bottom' %}
      justify-content: flex-end;
    {% endif %}
  }

  @media (max-width: 749px) {
    .custom-hero-section {
      {% if section.settings.bg_image_mobile %}
        background-image: url('{{ section.settings.bg_image_mobile | image_url: width: 1500 }}');
      {% elsif section.settings.bg_image_desktop %}
        background-image: url('{{ section.settings.bg_image_desktop | image_url: width: 1500 }}');
      {% endif %}
    }
  }

  @media (min-width: 750px) {
    .custom-hero-section {
      {% if section.settings.bg_image_desktop %}
        background-image: url('{{ section.settings.bg_image_desktop | image_url: width: 2000 }}');
      {% endif %}
    }
  }

  .custom-hero-overlay {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    z-index: 1;
  }

  .custom-hero-overlay__color {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    background: {{ section.settings.overlay_color }};
    opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};
    mix-blend-mode: {{ section.settings.overlay_blend_mode | default: 'normal' }};
    z-index: 2;
    pointer-events: none;
  }

  {% if section.settings.gradient_overlay != blank %}
    .custom-hero-overlay__gradient {
      position: absolute;
      inset: 0;
      width: 100%;
      height: 100%;
      background: {{ section.settings.gradient_overlay }};
      opacity: {{ section.settings.gradient_opacity | divided_by: 100.0 }};
      mix-blend-mode: {{ section.settings.overlay_blend_mode | default: 'normal' }};
      z-index: 3;
      pointer-events: none;
    }
  {% endif %}

  {% if section.settings.highlight_image %}
    .custom-hero-highlight-image {
      position: absolute;
      width: {{ section.settings.highlight_image_size | default: '300px' }};
      height: auto;
      opacity: {{ section.settings.highlight_image_opacity | default: 80 | divided_by: 100.0 }};
      mix-blend-mode: {{ section.settings.highlight_image_blend_mode | default: 'normal' }};
      z-index: {{ section.settings.highlight_image_z_index | default: 4 }};
      pointer-events: none;
      transform: rotate({{ section.settings.highlight_image_rotation | default: 0 }}deg);
      
      {% comment %} Horizontal Alignment {% endcomment %}
      {% case section.settings.highlight_image_horizontal_align %}
        {% when 'left' %}
          left: {{ section.settings.highlight_image_offset_x | default: '0px' }};
        {% when 'center' %}
          left: 50%;
          transform: translateX(-50%) rotate({{ section.settings.highlight_image_rotation | default: 0 }}deg);
          margin-left: {{ section.settings.highlight_image_offset_x | default: '0px' }};
        {% when 'right' %}
          right: {{ section.settings.highlight_image_offset_x | default: '0px' }};
      {% endcase %}
      
      {% comment %} Vertical Alignment {% endcomment %}
      {% case section.settings.highlight_image_vertical_align %}
        {% when 'top' %}
          top: {{ section.settings.highlight_image_offset_y | default: '0px' }};
        {% when 'center' %}
          top: 50%;
          {% if section.settings.highlight_image_horizontal_align == 'center' %}
            transform: translate(-50%, -50%) rotate({{ section.settings.highlight_image_rotation | default: 0 }}deg);
          {% else %}
            transform: translateY(-50%) rotate({{ section.settings.highlight_image_rotation | default: 0 }}deg);
          {% endif %}
          margin-top: {{ section.settings.highlight_image_offset_y | default: '0px' }};
        {% when 'bottom' %}
          bottom: {{ section.settings.highlight_image_offset_y | default: '0px' }};
      {% endcase %}
    }
    
    @media (max-width: 768px) {
      .custom-hero-highlight-image {
        width: calc({{ section.settings.highlight_image_size | default: '300px' }} * 0.7);
      }
    }
    
    @media (max-width: 480px) {
      .custom-hero-highlight-image {
        width: calc({{ section.settings.highlight_image_size | default: '300px' }} * 0.5);
      }
    }
  {% endif %}

  .custom-hero-content {
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    position: relative;
    z-index: 10;
    {% if section.settings.content_alignment == 'left' %}
      align-items: flex-start;
      text-align: left;
    {% elsif section.settings.content_alignment == 'center' %}
      align-items: center;
      text-align: center;
    {% elsif section.settings.content_alignment == 'right' %}
      align-items: flex-end;
      text-align: right;
    {% endif %}
    padding: {{ section.settings.text_padding | default: '2rem' }};
    margin: {{ section.settings.text_margin | default: '0' }};
  }

  .custom-hero-title {
    font-size: clamp(2rem, 5vw, 3.5rem);
    font-weight: bold;
    margin-bottom: 0.5rem;
    color: {{ section.settings.text_color }};
    font-family: {% render 'font-family-helper', source: section.settings.title_font_source, shopify_font: section.settings.title_font_family, custom_font: section.settings.title_custom_font %};
    filter: drop-shadow({{ section.settings.title_shadow_x | default: '1px' }} {{ section.settings.title_shadow_y | default: '1px' }} {{ section.settings.title_shadow_blur | default: '5px' }} {{ section.settings.title_shadow_color | default: '#000000' }});
    line-height: 1.2;
  }

  .custom-hero-subtitle {
    font-size: clamp(1.2rem, 3vw, 1.8rem);
    margin-bottom: 1rem;
    color: {{ section.settings.text_color }};
    font-family: {% render 'font-family-helper', source: section.settings.subtitle_font_source, shopify_font: section.settings.subtitle_font_family, custom_font: section.settings.subtitle_custom_font %};
    filter: drop-shadow({{ section.settings.subtitle_shadow_x | default: '1px' }} {{ section.settings.subtitle_shadow_y | default: '1px' }} {{ section.settings.subtitle_shadow_blur | default: '5px' }} {{ section.settings.subtitle_shadow_color | default: '#000000' }});
    line-height: 1.3;
  }

  .custom-hero-paragraph {
    font-size: clamp(1rem, 2vw, 1.25rem);
    margin-bottom: 2rem;
    color: {{ section.settings.text_color }};
    max-width: 600px;
    font-family: {% render 'font-family-helper', source: section.settings.paragraph_font_source, shopify_font: section.settings.paragraph_font_family, custom_font: section.settings.paragraph_custom_font %};
    filter: drop-shadow({{ section.settings.paragraph_shadow_x | default: '1px' }} {{ section.settings.paragraph_shadow_y | default: '1px' }} {{ section.settings.paragraph_shadow_blur | default: '5px' }} {{ section.settings.paragraph_shadow_color | default: '#000000' }});
    line-height: 1.5;
  }

  .custom-hero-btn {
    display: inline-block;
    padding: 1rem 2.5rem;
    background: {{ section.settings.button_bg_color }};
    color: {{ section.settings.button_text_color }};
    border-radius: 3rem;
    font-size: 1.1rem;
    text-decoration: none;
    font-weight: 600;
    border: none;
    cursor: pointer;
    box-shadow: 0 4px 8px rgba(0,0,0,0.15);
    transition: all 0.3s ease;
    font-family: {% render 'font-family-helper', source: section.settings.button_font_source, shopify_font: section.settings.button_font_family, custom_font: section.settings.button_custom_font %};
    filter: drop-shadow({{ section.settings.button_shadow_x | default: '1px' }} {{ section.settings.button_shadow_y | default: '1px' }} {{ section.settings.button_shadow_blur | default: '5px' }} {{ section.settings.button_shadow_color | default: '#000000' }});
    {{ section.settings.button_custom_style }}
  }

  .custom-hero-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 12px rgba(0,0,0,0.25);
  }

  /* Mobile Responsive */
  @media (max-width: 768px) {
    .custom-hero-content {
      padding: 1.5rem;
    }

    .custom-hero-title {
      margin-bottom: 0.75rem;
    }

    .custom-hero-subtitle {
      margin-bottom: 1rem;
    }

    .custom-hero-paragraph {
      margin-bottom: 1.5rem;
    }

    .custom-hero-btn {
      padding: 0.875rem 2rem;
      font-size: 1rem;
    }
  }

  /* Accessibility */
  @media (prefers-reduced-motion: reduce) {
    .custom-hero-btn {
      transition: none;
    }
    
    .custom-hero-btn:hover {
      transform: none;
    }
  }

  /* High contrast mode */
  @media (prefers-contrast: high) {
    .custom-hero-btn {
      border: 2px solid currentColor;
    }
  }

  /* Blend Mode Fallbacks - mix-blend-mode is supported in all modern browsers */
  @supports not (mix-blend-mode: normal) {
    .custom-hero-overlay__color,
    .custom-hero-overlay__gradient {
      mix-blend-mode: normal;
    }
  }
{% endstyle %}

<section class="custom-hero-section" id="custom-hero-{{ section.id }}">
  <div class="custom-hero-overlay">
    <div class="custom-hero-overlay__color"></div>
    {% if section.settings.gradient_overlay != blank %}
      <div class="custom-hero-overlay__gradient"></div>
    {% endif %}
  </div>
  
  {% if section.settings.highlight_image %}
    <img 
      src="{{ section.settings.highlight_image | image_url: width: 800 }}"
      alt="Decorative highlight image"
      class="custom-hero-highlight-image"
      loading="lazy"
      width="{{ section.settings.highlight_image.width }}"
      height="{{ section.settings.highlight_image.height }}"
      srcset="{{ section.settings.highlight_image | image_url: width: 400 }} 400w,
              {{ section.settings.highlight_image | image_url: width: 600 }} 600w,
              {{ section.settings.highlight_image | image_url: width: 800 }} 800w"
      sizes="(max-width: 480px) 200px, (max-width: 768px) 300px, 400px">
  {% endif %}
  
  <div class="custom-hero-content">
    {% if section.settings.title != blank %}
      <h1 class="custom-hero-title">{{ section.settings.title }}</h1>
    {% endif %}
    
    {% if section.settings.subtitle != blank %}
      <div class="custom-hero-subtitle">{{ section.settings.subtitle }}</div>
    {% endif %}
    
    {% if section.settings.paragraph != blank %}
      <div class="custom-hero-paragraph">{{ section.settings.paragraph }}</div>
    {% endif %}
    
    {% if section.settings.button_text != blank and section.settings.button_url != blank %}
      <a class="custom-hero-btn" 
         href="{{ section.settings.button_url }}" 
         {% if section.settings.button_url contains 'http' %}target="_blank" rel="noopener"{% endif %}
         style="{{ section.settings.button_custom_style }}">
        {{ section.settings.button_text }}
      </a>
    {% endif %}
  </div>
</section>

