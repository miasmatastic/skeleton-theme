[
  {
    "name": "theme_info",
    "theme_name": "PJM Skeleton Plus",
    "theme_version": "1.0.0",
    "theme_author": "Pure Junk Media",
    "theme_documentation_url": "https://github.com/miasmatastic/skeleton-theme",
    "theme_support_url": "https://purejunkmedia.com/support"
  },
  {
    "name": "t:general.typography",
    "settings": [
      {
        "type": "header",
        "content": "t:general.fonts"
      },
      {
        "type": "font_picker",
        "id": "type_primary_font",
        "default": "work_sans_n4",
        "label": "t:general.primary"
      },
      {
        "type": "font_picker",
        "id": "type_secondary_font",
        "default": "work_sans_n6",
        "label": "t:general.secondary"
      }
    ]
  },
  {
    "name": "t:general.layout",
    "settings": [
      {
        "type": "select",
        "id": "max_page_width",
        "label": "t:labels.page_width",
        "options": [
          {
            "value": "90rem",
            "label": "t:options.page_width.narrow"
          },
          {
            "value": "110rem",
            "label": "t:options.page_width.wide"
          },
          {
            "value": "130rem",
            "label": "t:options.page_width.extra_wide"
          }
        ],
        "default": "110rem"
      },
      {
        "type": "range",
        "id": "min_page_margin",
        "min": 10,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "t:labels.page_margin",
        "default": 20
      }
    ]
  },
  {
    "name": "t:general.colors",
    "settings": [
      {
        "type": "color",
        "id": "background_color",
        "default": "#FFFFFF",
        "label": "t:labels.background"
      },
      {
        "type": "color",
        "id": "foreground_color",
        "default": "#333333",
        "label": "t:labels.foreground"
      },
      {
        "type": "color",
        "id": "accent_color",
        "default": "#007bff",
        "label": "Accent Color"
      },
      {
        "type": "range",
        "id": "input_corner_radius",
        "min": 0,
        "max": 10,
        "step": 1,
        "unit": "px",
        "label": "t:labels.input_corner_radius",
        "default": 4
      }
    ]
  },
  {
    "name": "Color Schemes",
    "settings": [
      {
        "type": "header",
        "content": "Color Scheme 1"
      },
      {
        "type": "color",
        "id": "scheme1_background",
        "default": "#FFFFFF",
        "label": "Background"
      },
      {
        "type": "color",
        "id": "scheme1_text",
        "default": "#333333",
        "label": "Text"
      },
      {
        "type": "color",
        "id": "scheme1_accent",
        "default": "#007bff",
        "label": "Accent"
      },
      {
        "type": "header",
        "content": "Color Scheme 2"
      },
      {
        "type": "color",
        "id": "scheme2_background",
        "default": "#F8F9FA",
        "label": "Background"
      },
      {
        "type": "color",
        "id": "scheme2_text",
        "default": "#212529",
        "label": "Text"
      },
      {
        "type": "color",
        "id": "scheme2_accent",
        "default": "#28A745",
        "label": "Accent"
      },
      {
        "type": "header",
        "content": "Color Scheme 3"
      },
      {
        "type": "color",
        "id": "scheme3_background",
        "default": "#343A40",
        "label": "Background"
      },
      {
        "type": "color",
        "id": "scheme3_text",
        "default": "#FFFFFF",
        "label": "Text"
      },
      {
        "type": "color",
        "id": "scheme3_accent",
        "default": "#FFC107",
        "label": "Accent"
      }
    ]
  },
  {
    "name": "Enhanced Features",
    "settings": [
      {
        "type": "header",
        "content": "PJM Enhanced Sections"
      },
      {
        "type": "checkbox",
        "id": "enable_enhanced_features",
        "label": "Enable Enhanced Features",
        "default": true,
        "info": "Unlock additional customization options for PJM sections"
      },
      {
        "type": "checkbox",
        "id": "enable_quick_add",
        "label": "Enable Quick Add to Cart",
        "default": true,
        "info": "Show quick add buttons on product cards"
      },
      {
        "type": "checkbox",
        "id": "enable_product_badges",
        "label": "Enable Product Badges",
        "default": true,
        "info": "Show sale and custom badges on products"
      }
    ]
  }
]
