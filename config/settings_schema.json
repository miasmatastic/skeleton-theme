[
  {
    "name": "theme_info",
    "theme_name": "PJM Skeleton Plus",
    "theme_version": "1.0.0",
    "theme_author": "Pure Junk Media",
    "theme_documentation_url": "https://github.com/miasmatastic/skeleton-theme",
    "theme_support_url": "https://purejunkmedia.com/support"
  },
  {
    "name": "t:general.typography",
    "settings": [
      {
        "type": "header",
        "content": "t:general.fonts"
      },
      {
        "type": "font_picker",
        "id": "type_primary_font",
        "default": "work_sans_n4",
        "label": "t:general.primary"
      },
      {
        "type": "font_picker",
        "id": "type_secondary_font",
        "default": "work_sans_n6",
        "label": "t:general.secondary"
      },
      {
        "type": "header",
        "content": "üé® Adobe Fonts Integration"
      },
      {
        "type": "text",
        "id": "adobe_heading_font",
        "label": "Adobe Heading Font",
        "placeholder": "proxima-nova, 'Helvetica Neue', Arial, sans-serif",
        "info": "Your primary Adobe heading font with fallbacks. Include quotes around multi-word font names."
      },
      {
        "type": "text",
        "id": "adobe_body_font",
        "label": "Adobe Body Font",
        "placeholder": "source-sans-pro, Georgia, serif",
        "info": "Your primary Adobe body font with fallbacks"
      },
      {
        "type": "text",
        "id": "adobe_display_font",
        "label": "Adobe Display Font",
        "placeholder": "futura-pt, Impact, sans-serif",
        "info": "Your primary Adobe display font for special headings"
      },
      {
        "type": "text",
        "id": "adobe_accent_font",
        "label": "Adobe Accent Font",
        "placeholder": "bebas-neue, 'Arial Black', sans-serif",
        "info": "Your Adobe accent font for emphasis and CTAs"
      }
    ]
  },
  {
    "name": "t:general.layout",
    "settings": [
      {
        "type": "select",
        "id": "max_page_width",
        "label": "t:labels.page_width",
        "options": [
          {
            "value": "90rem",
            "label": "t:options.page_width.narrow"
          },
          {
            "value": "110rem",
            "label": "t:options.page_width.wide"
          },
          {
            "value": "130rem",
            "label": "t:options.page_width.extra_wide"
          }
        ],
        "default": "110rem"
      },
      {
        "type": "range",
        "id": "min_page_margin",
        "min": 10,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "t:labels.page_margin",
        "default": 20
      }
    ]
  },
  {
    "name": "t:general.colors",
    "settings": [
      {
        "type": "color",
        "id": "background_color",
        "default": "#FFFFFF",
        "label": "t:labels.background"
      },
      {
        "type": "color",
        "id": "foreground_color",
        "default": "#333333",
        "label": "t:labels.foreground"
      },
      {
        "type": "color",
        "id": "accent_color",
        "default": "#007bff",
        "label": "Accent Color"
      },
      {
        "type": "range",
        "id": "input_corner_radius",
        "min": 0,
        "max": 10,
        "step": 1,
        "unit": "px",
        "label": "t:labels.input_corner_radius",
        "default": 4
      }
    ]
  },
