      "default": 0,
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px"
    },
    {
      "type": "select",
      "id": "width",
      "label": "Width",
      "default": "fill",
      "options": [
        { "value": "fill", "label": "Fill" },
        { "value": "custom", "label": "Custom" }
      ]
    },
    {
      "type": "range",
      "id": "custom_width",
      "label": "Custom Width",
      "min": 10,
      "max": 100,
      "step": 5,
      "default": 100,
      "unit": "%"
    },
    {
      "type": "select",
      "id": "width_mobile",
      "label": "Mobile Width",
