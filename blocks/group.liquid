      "options": [
        { "value": "fill", "label": "Fill" },
        { "value": "custom", "label": "Custom" }
      ]
    },
    {
      "type": "range",
      "id": "custom_width_mobile",
      "label": "Custom Mobile Width",
      "min": 10,
      "max": 100,
      "step": 5,
      "default": 100,
      "unit": "%"
    },
    {
      "type": "select",
      "id": "height",
      "label": "Height",
      "default": "fit",
      "options": [
        { "value": "fit", "label": "Fit Content" },
