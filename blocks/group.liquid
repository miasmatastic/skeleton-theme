      ]
    },
    {
      "type": "range",
      "id": "custom_height",
      "label": "Custom Height",
      "min": 50,
      "max": 800,
      "step": 10,
      "default": 100,
      "unit": "px"
    }
  ],
  "presets": [
    {
      "name": "t:general.column",
      "category": "t:general.layout",
      "settings": {
        "layout_direction": "group--vertical",
        "alignment": "flex-start",
        "padding": 0
      }
    },
    {
