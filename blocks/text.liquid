{% doc %}
  Renders a text block.

  @example
  {% content_for 'block', type: 'text', id: 'text' %}
{% enddoc %}

<div
  class="text {{ block.settings.text_style }}"
  style="--text-align: {{ block.settings.alignment }}"
  {{ block.shopify_attributes }}
>
  {{ block.settings.text }}
</div>

{% stylesheet %}
  .text {
    text-align: var(--text-align);
  }
  .text--title {
    font-size: 2rem;
    font-weight: 700;
  }
  .text--subtitle {
    font-size: 1.5rem;
  }
{% endstylesheet %}

{% schema %}
{
  "name": "t:general.text",
  "settings": [
    {
      "type": "text",
      "id": "text",
      "label": "t:labels.text",
      "default": "Text"
    },
    {
      "type": "select",
      "id": "text_style",
      "label": "t:labels.text_style",
      "options": [
        { "value": "text--title", "label": "t:options.text_style.title" },
        { "value": "text--subtitle", "label": "t:options.text_style.subtitle" },
        { "value": "text--normal", "label": "t:options.text_style.normal" }
      ],
      "default": "text--title"
    },
    {
      "type": "select",
      "id": "type_preset",
      "label": "Typography Preset",
      "default": "body",
      "options": [
        { "value": "h1", "label": "Heading 1" },
        { "value": "h2", "label": "Heading 2" },
        { "value": "h3", "label": "Heading 3" },
        { "value": "h4", "label": "Heading 4" },
        { "value": "h5", "label": "Heading 5" },
        { "value": "h6", "label": "Heading 6" },
        { "value": "body", "label": "Body Text" },
        { "value": "small", "label": "Small Text" }
      ]
    },
    {
      "type": "select",
      "id": "case",
      "label": "Text Case",
      "default": "none",
      "options": [
        { "value": "none", "label": "Normal" },
        { "value": "uppercase", "label": "UPPERCASE" },
        { "value": "lowercase", "label": "lowercase" },
        { "value": "capitalize", "label": "Capitalize" }
      ]
    },
    {
      "type": "text_alignment",
      "id": "alignment",
      "label": "t:labels.alignment",
      "default": "left"
    },
    {
      "type": "font_picker",
      "id": "font",
      "label": "Font",
      "default": "assistant_n4"
    },
    {
      "type": "range",
      "id": "font_size",
      "label": "Font Size",
      "min": 10,
      "max": 100,
      "step": 1,
      "default": 16,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "line_height",
      "label": "Line Height",
      "min": 0.8,
      "max": 3,
      "step": 0.1,
      "default": 1.4
    },
    {
      "type": "range",
      "id": "letter_spacing",
      "label": "Letter Spacing",
      "min": -0.2,
      "max": 2,
      "step": 0.1,
      "default": 0,
      "unit": "em"
    },
    {
      "type": "checkbox",
      "id": "wrap",
      "label": "Word Wrap",
      "default": true
    },
    {
      "type": "select",
      "id": "width",
      "label": "Width",
      "default": "auto",
      "options": [
        { "value": "auto", "label": "Auto" },
        { "value": "custom", "label": "Custom" },
        { "value": "full", "label": "Full" }
      ]
    },
    {
      "type": "range",
      "id": "max_width",
      "label": "Max Width",
      "min": 100,
      "max": 1000,
      "step": 10,
      "default": 600,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding-block-start",
      "label": "Top Padding",
      "min": 0,
      "max": 200,
      "step": 4,
      "default": 0,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding-block-end",
      "label": "Bottom Padding",
      "min": 0,
      "max": 200,
      "step": 4,
      "default": 0,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding-inline-start",
      "label": "Left Padding",
      "min": 0,
      "max": 200,
      "step": 4,
      "default": 0,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding-inline-end",
      "label": "Right Padding",
      "min": 0,
      "max": 200,
      "step": 4,
      "default": 0,
      "unit": "px"
    }
  ],
  "presets": [{ "name": "t:general.text" }]
}
{% endschema %}

