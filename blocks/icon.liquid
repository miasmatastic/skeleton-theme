{% doc %}
  Renders an icon block with customizable settings.
  
  @example
  {% content_for 'block', type: 'icon', id: 'icon' %}
{% enddoc %}

{%- liquid
  assign icon_size = block.settings.icon_size | default: 24
  assign icon_color = block.settings.icon_color | default: 'currentColor'
-%}

<div 
  class="icon-block"
  style="
    --icon-size: {{ icon_size }}px;
    --icon-color: {{ icon_color }};
  "
  {{ block.shopify_attributes }}
>
  {% if block.settings.icon_svg %}
    <div class="icon-block__svg">
      {{ block.settings.icon_svg }}
    </div>
  {% elsif block.settings.icon_name %}
    <div class="icon-block__name">
      {{ block.settings.icon_name | capitalize }}
    </div>
  {% endif %}
</div>

{% stylesheet %}
  .icon-block {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: var(--icon-size);
    height: var(--icon-size);
    color: var(--icon-color);
  }

  .icon-block__svg svg {
    width: 100%;
    height: 100%;
    fill: currentColor;
  }

  .icon-block__name {
    font-size: calc(var(--icon-size) * 0.5);
    font-weight: bold;
    text-align: center;
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Icon",
  "settings": [
    {
      "type": "html",
      "id": "icon_svg",
      "label": "SVG Icon Code",
      "info": "Paste your SVG code here"
    },
    {
      "type": "text",
      "id": "icon_name",
      "label": "Icon Name",
      "info": "Used if no SVG provided"
    },
    {
      "type": "range",
      "id": "icon_size",
      "label": "Icon Size",
      "min": 12,
      "max": 100,
      "step": 2,
      "default": 24,
      "unit": "px"
    },
    {
      "type": "color",
      "id": "icon_color",
      "label": "Icon Color",
      "default": "#000000"
    }
  ],
  "presets": [
    {
      "name": "Icon",
      "settings": {
        "icon_size": 24
      }
    }
  ]
}
{% endschema %}
